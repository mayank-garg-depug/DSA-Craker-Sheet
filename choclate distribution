https://practice.geeksforgeeks.org/problems/chocolate-distribution-problem/0


#include<algorithm>
int main()
{
int t;
cin>>t;
while(t--)
{
int n;
cin>>n;
int a[n];
for(int i=0;i<n;i++)
cin>>a[i];
sort(a,a+n);
int s;
cin>>s;
int j=s-1;
m=a[s];
for(int i=0;j<n;i++)
{
m=min(m,a[j]-a[i]);
}
cout<<m<<endl;

}
}
